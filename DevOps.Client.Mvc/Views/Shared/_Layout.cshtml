<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Demo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Satisfacción del cliente", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Reporte", "Report", "Home")</li>
                        <li>@Html.ActionLink("Demo", "Demo", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="container body-content">
            <div id="contentall">
                @RenderBody()
            </div>
        </div>
    </div>




    <!-- Modal Alert-->
    <div class="modal fade" id="AlertModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="MsjTitleAlert"></h4>
                </div>
                <div class="modal-body" id="MsjBodyAlert">
                </div>
                <div class="modal-footer">
                    <a href="javascript:;" class="btn btn-sm btn-primary" data-dismiss="modal">cerrar</a>
                </div>

            </div>
        </div>
    </div>

    <!-- Modal Alert-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/viewsjs")
    @RenderSection("scripts", required: false)
</body>
</html>
